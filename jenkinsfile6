pipeline {
    agent any
    stages{
        stage('checkout') {
            steps{
                git branch: 'main', credentialsId: 'appifgfgg9', url: 'https://github.com/Sudhanvaav19/jenkins.git'
            }
        }   
        stage('build'){
                steps{
                    echo "Build completed"

                }
                
        }
        stage('test'){
                steps{
                    echo "Test completed"
                }

        }
        stage('deploy'){
                steps{
                  sh '''
                chmod +x hello.sh
                 ./hello.sh
                 '''
                 echo "Deploy completed1"
                }
               
                 
        }
        
    }
        
}